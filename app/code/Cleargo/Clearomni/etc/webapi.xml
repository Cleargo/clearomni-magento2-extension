<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="GET" url="/V1/cleargo-clearomni/productinfo">
		<service class="Cleargo\Clearomni\Api\ProductInfoManagementInterface" method="getProductInfo"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	<route method="GET" url="/V1/cleargo-clearomni/productattribute/frontendlabel">
		<service class="Cleargo\Clearomni\Api\ProductAttributeManagementInterface" method="getFrontendLabel"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	<route method="POST" url="/V1/cleargo-clearomni/order">
		<service class="Cleargo\Clearomni\Api\OrderManagementInterface" method="postOrder"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	<route method="GET" url="/V1/cleargo-clearomni/orderstatus">
		<service class="Cleargo\Clearomni\Api\OrderStatusManagementInterface" method="getOrderStatus"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
</routes>
